<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:eyes="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:background="#12A89D"
    android:orientation="vertical" >

    <com.example.eyecontacts.widget.TextViewPlus
        android:id="@+id/txt_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:text="@string/contact_lens"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        eyes:textFont="mvboli.ttf" />

    <com.example.eyecontacts.widget.ButtonPlus
        android:id="@+id/btn_change_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@android:color/transparent"
        android:text="@string/change_now"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        eyes:textFont="mvboli.ttf" />

</RelativeLayout>